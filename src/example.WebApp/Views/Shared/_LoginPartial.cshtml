
@using cloudscribe.Web.SimpleAuth.Extensions

@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Login" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="pull-right navbar-text navbar-gravatar">
                    <a asp-controller="Manage" asp-action="Index" title="Manage">
                        <img gravatar-email="@User.GetEmail()" gravatar-size="30" />
                    </a>
                </div>
            </li>
            <li>
                <a asp-controller="Account" asp-action="Index">Hello @User.GetDisplayName()!</a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Login" asp-action="Index" asp-route-returnurl="@(Context.Request.Path + Context.Request.QueryString)">Log in</a></li>
    </ul>
}
